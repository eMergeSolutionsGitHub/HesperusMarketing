<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#009d2b2b"
    android:id="@+id/relativelayoutProduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@android:color/white"
        android:layout_marginBottom="1dp"
        android:id="@+id/listProduct"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewCode"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewdescription"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewCode"
            android:layout_toEndOf="@+id/textViewCode"
            android:textColor="@color/myBlue" />

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewBatch"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewdescription"
            android:layout_toEndOf="@+id/textViewdescription"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtStock"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewBatch"
            android:layout_toEndOf="@+id/textViewBatch"
            android:layout_marginLeft="5dp"
            android:textColor="@color/myRed" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewPrice"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txtStock"
            android:layout_toEndOf="@+id/txtStock"
            android:layout_marginLeft="5dp"
            android:textColor="@color/myGreen" />


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/TextShelf"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewPrice"
            android:layout_toEndOf="@+id/textViewPrice"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black" />


        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/TextRequest"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TextShelf"
            android:layout_toEndOf="@+id/TextShelf"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/TextOrder"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TextRequest"
            android:layout_toEndOf="@+id/TextRequest"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/TextFree"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TextOrder"
            android:layout_toEndOf="@+id/TextOrder"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/TextDiscount"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TextFree"
            android:layout_toEndOf="@+id/TextFree"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>