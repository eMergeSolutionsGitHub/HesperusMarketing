<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#ffffff">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewCode"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewdescription"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewCode"
            android:layout_toEndOf="@+id/textViewCode"
            android:textColor="@color/myBlue" />

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewBatch"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewdescription"
            android:layout_toEndOf="@+id/textViewdescription"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewStock"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewBatch"
            android:layout_toEndOf="@+id/textViewBatch"
            android:layout_marginLeft="5dp"
            android:textColor="@color/myRed" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewPrice"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewStock"
            android:layout_toEndOf="@+id/textViewStock"
            android:layout_marginLeft="5dp"
            android:textColor="@color/myGreen" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextShelf"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewPrice"
            android:layout_toEndOf="@+id/textViewPrice"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextRequest"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editTextShelf"
            android:layout_toEndOf="@+id/editTextShelf"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextOrder"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editTextRequest"
            android:layout_toEndOf="@+id/editTextRequest"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextFree"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editTextOrder"
            android:layout_toEndOf="@+id/editTextOrder"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextDiscount"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editTextFree"
            android:layout_toEndOf="@+id/editTextFree"
            android:layout_marginLeft="5dp"
            android:inputType="numberDecimal" />

    </RelativeLayout>

</RelativeLayout>