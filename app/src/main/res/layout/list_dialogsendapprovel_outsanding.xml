<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout25"
        android:background="#ffffff"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Invoce no"
            android:id="@+id/textView_invno"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Value "
            android:id="@+id/textView_value"
            android:layout_alignTop="@+id/textView_invno"
            android:layout_toRightOf="@+id/textView_invno"
            android:layout_toEndOf="@+id/textView_invno"
            android:layout_marginLeft="5dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Due date"
            android:id="@+id/textView_duedate"
            android:layout_alignTop="@+id/textView_value"
            android:layout_toRightOf="@+id/textView_value"
            android:layout_toEndOf="@+id/textView_value"
            android:layout_marginLeft="20dp"
            android:textColor="#000000" />
    </RelativeLayout>


</RelativeLayout>