<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout13"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout12"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvName3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Collection No"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tvDate3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvName3"
            android:layout_toRightOf="@+id/tvName3"
            android:text="Collection Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />



        <TextView
            android:id="@+id/tvInvNo3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvDate3"
            android:layout_toRightOf="@+id/tvDate3"
            android:text="Invoice No"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tvValue3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cash Amount "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_alignTop="@+id/tvInvNo3"
            android:layout_toRightOf="@+id/tvInvNo3"
            android:layout_toEndOf="@+id/tvInvNo3"
            android:layout_marginLeft="5dp" />

        <TextView
        android:id="@+id/tvValue33"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Cash Amount "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_alignTop="@+id/tvValue3"
        android:layout_toRightOf="@+id/tvValue3"
        android:layout_toEndOf="@+id/tvValue3"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tvcollname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_alignTop="@+id/tvValue33"
            android:layout_toRightOf="@+id/tvValue33"
            android:layout_toEndOf="@+id/tvValue33"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>

</LinearLayout>